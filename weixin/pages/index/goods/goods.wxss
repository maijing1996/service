/* pages/index/goods/goods.wxss */

.swiper-item {
  display: block;
  width: 750rpx;
  height: 365rpx;
}

.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  position:fixed;
top:0;
z-index:100;
width:100%;
background:white;

}

.search .scan {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 10%;
}

.search .search-input {
  padding: 5rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  height: 100%;
  width: 80%;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  border-radius: 5px;
  align-items: center;
}

.search-icon {
  width: 30rpx;
  height: 30rpx;
}

.search-text {
  top: 0px;
  padding: 0px;
  left: 0rpx;
  right: 0rpx;
}

.widgets-img {
  width: 50rpx;
  height: 50rpx;
}

.widgets-title {
  color: #888;
  font-size: 1px;
}

.big-logo {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.logoinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 150rpx;
  height: 150rpx;
}

.logotext {
  color: #aaa;
  font-size: 22rpx;
}

.page-margin {
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.page-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.page-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.draw__line {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 2rpx;
  background-color: #f0f0f0;
}



/*goods  */
.scroll-view {
  background-color: #F4F5F9;
  margin-top: 50rpx;
}
.goods {
  background-color: white;
  margin-bottom: 10rpx;
}
.user {
  padding: 10rpx;
}
.user-image {
  width: 100rpx;
  height: 100rpx;
}

.user-image-info {
  float: left;
  display: block;
  margin-right: 15rpx;
}

.user-name {
  float: left;
}
.user-info {
  height: 100rpx;
  display: block;
}
.timestamp {
   /* float: left; */
   color: #D9D9D9;
   font-size: 30rpx;
   margin-top:15rpx; 
}
.user-name-tr{
  width: 100%;
  display: block;
}
.price {
  /* float: right; */
  text-align: right;
  color: red;
}
/*图片列表  */
.images-list {
  width: 100%;
  display: block;
  float:left;

}

.loadpic{
  margin: 20px auto;
  width: 500rpx;
  height: 80rpx;
  background: #d34c17;
  text-align: center;
  color: white;
  line-height: 80rpx;
}
 .previewimg{
  padding: 10rpx;
  float: left;
  background: white;
} 
.image{
  display: block;
  width: 200rpx;
  height: 200rpx;
}
.showPic{
  margin: 0 auto;

}
